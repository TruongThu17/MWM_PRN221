@page
@model ProjectFinal.Pages.Admin.Transaction.DetailImportModel
<div class="row" style="height:100px;">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <i class="fa fa-align-justify"></i> Chi Tiết Thông Tin Nhập Hàng
                </div>
            </div>
            <div class="p-3">
                <dl class="row">
                    <dt class="col-sm-2 ">
                        Người Nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImportProduct.UserNameNavigation.Name)
                    </dd>
                    <dt class="col-sm-2 ">
                        Tên Nhà Phân Phối
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImportProduct.SupplierNavigation.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Mã Nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImportProduct.CodeImport)
                    </dd>
                    <dt class="col-sm-2">
                       Ngày Nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImportProduct.DateImport)
                    </dd>
                    <dt class="col-sm-2">
                        Giảm Giá
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImportProduct.Discount)
                    </dd>
                    <dt class="col-sm-2">
                       Tổng Hóa Đơn
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ImportProduct.TotalBill)
                    </dd>
                </dl>
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th style="font-size:12px;">Mã Sản Phẩm</th>
                            <th style="font-size:12px;">Tên Sản Phẩm</th>
                            <th style="font-size:12px;">Giá Nhập</th>
                            <th style="font-size:12px;">Số Lượng</th>
                            <th style="font-size:12px;">Hàng Hết Hạn </th>
                            <th style="font-size:12px;">Kệ Hàng</th>
                        </tr>
                    </thead>
                    <tbody id="productTableBody">
                        @foreach (var p in @Model.InforImports)
                                {
                                    <tr>
                                        <td>@p.Idproduct</td>
                                        <td>@p.IdproductNavigation.Name</td>
                                        <td>@p.ImportPrice</td>
                                        <td>@p.QuantityImport</td>
                                        <td>@p.DateExpiry</td>
                                        <td>@p.Shelves</td>
                                    </tr>
                                }
                    </tbody>
                </table>

                <div class="mt-5">
                    <a asp-page="./Bills">Danh Sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }