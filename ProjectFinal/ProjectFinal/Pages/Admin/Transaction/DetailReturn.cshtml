@page
@model ProjectFinal.Pages.Admin.Transaction.DetailReturnModel
@{
}
<div class="row" style="height:100px;">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <i class="fa fa-align-justify"></i> Chi Tiết Thông Tin Trả Hàng
                </div>
            </div>
            <div class="p-3">
                <dl class="row">
                    <dt class="col-sm-2 ">
                        Người Nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Return.UsernameNavigation.Name)
                    </dd>
                    <dt class="col-sm-2 ">
                        Tên Khách Hàng
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Return.IdcustomerNavigation.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Mã Hóa Đơn
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Return.Idbill)
                    </dd>
                    <dt class="col-sm-2">
                       Ngày Nhập
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Return.Date)
                    </dd>
                    <dt class="col-sm-2">
                       Tổng Hóa Đơn
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Return.Totalbill)
                    </dd>
                </dl>
                <table class="table table-responsive-sm">
                    <thead>
                        <tr>
                            <th style="font-size:12px;">Mã Sản Phẩm</th>
                            <th style="font-size:12px;">Tên Sản Phẩm</th>
                            <th style="font-size:12px;">Giá Nhập</th>
                            <th style="font-size:12px;">Số Lượng</th>
                            <th style="font-size:12px;">Hàng Hết Hạn </th>
                            <th style="font-size:12px;">Kệ Hàng</th>
                        </tr>
                    </thead>
                    <tbody id="productTableBody">
                        @foreach (var p in @Model.ProductsReturns)
                                {
                                    <tr>
                                        <td>@p.Idproduct</td>
                                        <td>@p.Id.IdproductNavigation.Name</td>
                                        <td>@p.Price</td>
                                        <td>@p.Quantity</td>
                                    </tr>
                                }
                    </tbody>
                </table>

                <div class="mt-5">
                    <a asp-page="./Returns">Danh Sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }