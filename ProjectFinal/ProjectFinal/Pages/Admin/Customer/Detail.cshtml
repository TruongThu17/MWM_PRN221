@page
@model ProjectFinal.Pages.Admin.Customer.DetailModel
@{
    ViewData["Title"] = "Chi Tiết";
}
<div class="row">
    <div class="col-lg-12">
        <div class="card mx-5">
            <div class="card-header d-flex justify-content-between">
                <div>
                    <i class="fa fa-align-justify"></i> Chi Tiết Thông Tin Khách Hàng
                </div>
            </div>
            <div class="p-3">
                <dl class="row">
                    <dt class="col-sm-2 ">
                        Tên Khách Hàng:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cus.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Địa Chỉ:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cus.Address)
                    </dd>
                    <dt class="col-sm-2">
                        Số Điện Thoại:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cus.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        Email:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cus.Email)
                    </dd>
                    <dt class="col-sm-2">
                        Ngày Sinh:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cus.Dob)
                    </dd>
                    <dt class="col-sm-2">
                        Ghi Chú:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Cus.Note)
                    </dd>
                    
                </dl>
                <div class="mt-5">
                    <a asp-page="./Edit" asp-route-id="@Model.Cus?.Id">Sửa</a> |
                    <a asp-page="./Customers">Danh Sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

