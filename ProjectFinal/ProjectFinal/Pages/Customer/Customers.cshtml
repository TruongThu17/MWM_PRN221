@page
@model ProjectFinal.Pages.Customer.CustomersModel
@{
        var pageingmodel = new Helper.PagingModel()
            {
                currentpage = Model.currentPage,
                countpages = Model.countPages,
                generateUrl = (int? p) => @Url.Page("/Customer/Customers", new { p = p})
            };
}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                            <i class="fa fa-align-justify"></i> Danh Sách Khách Hàng
                        </div>
                        <div class="row">
                            <form method="get">
                                <div class="row">
                                    <input style="width: 200px;" type="text" class="form-control" value="@Model.searchString" name="searchString" placeholder="Nhập tên khách hàng...">       
                                    <button type="submit" class="btn btn-primary mx-3">Tìm kiếm</button>
                                </div>
                            </form>
                            <button type="button" class="btn btn-primary mx-3" data-toggle="modal" data-target="#createModal">
                                    Thêm Mới
                            </button>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <table class="table table-responsive-sm table-bordered table-striped table-sm">
                            <thead>
                                 <tr>
                                    <th>ID</th>
                                    <th>Tên Khách Hàng</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Địa Chỉ</th>
                                    <th>Ghi Chú</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                        @if (Model.Customers != null)
                        {
                           @foreach (var c in Model.Customers)
                            {
                                <tr>
                                    <td>@c.Id</td>
                                    <td>@c.Name</td>
                                    <td>@c.Phone</td>
                                    <td>@c.Address</td>
                                    <td>@c.Note</td>
                                    <td style="width: 150px">
                                        <div class="d-flex justify-content-around">
                                            <a style="width:50px; height: 30px" class="btn btn-success" href="#">Xem</a>
                                            <a style="width:50px; height: 30px" class="btn btn-warning" href="#">Sửa</a>
                                        </div>
                                    </td>
                                </tr>
                            }  
                        }
                        else{

                            <p>Không có khách hàng nào được tìm thấy</p>
                        }
                            </tbody>
                        </table>
                         <partial name="_Page" model="@pageingmodel"/>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>