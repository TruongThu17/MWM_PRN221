@page
@model ProjectFinal.Pages.Customer.CustomersModel
@{
    var customer = Model.customer;
    var listcustomers = Model.dbContext.Customers.ToList();
}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                            <i class="fa fa-align-justify"></i> Danh Sách Khách Hàng
                        </div>
                        <div class="row">
                            <input style="width:200px" class="form-control col-lg-5" type="text" placeholder="Tìm Kiếm">  
                            <p class="col-lg-1"></p>
                            <a style="width:100px" class="btn btn-block btn-primary col-lg-5" href="#">Thêm Mới</a>
                         </div>
                    </div>
                    
                    <div class="card-body">
                        <table class="table table-responsive-sm table-bordered table-striped table-sm">
                            <thead>
                                 <tr>
                                    <th>ID</th>
                                    <th>Tên Khách Hàng</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Địa Chỉ</th>
                                    <th>Ghi Chú</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                        @if (listcustomers != null)
                        {
                           @foreach (var c in listcustomers)
                            {
                                <tr>
                                    <td>@c.Id</td>
                                    <td>@c.Name</td>
                                    <td>@c.Phone</td>
                                    <td>@c.Address</td>
                                    <td>@c.Note</td>
                                    <td style="width: 150px">
                                        <div class="d-flex justify-content-around">
                                            <a style="width:50px; height: 30px" class="btn btn-success" href="#">Xem</a>
                                            <a style="width:50px; height: 30px" class="btn btn-warning" href="#">Sửa</a>
                                        </div>
                                    </td>
                                </tr>
                            }  
                        }
                        else{

                            <p>Không có khách hàng nào được tìm thấy</p>
                        }
                            </tbody>
                        </table>
                        <nav>
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#">Prev</a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">3</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">4</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- /.col-->
        </div>